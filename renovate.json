{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },

  "major": {
    "dependencyDashboardApproval": true
  },

  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeSchedule": ["* * * * 6"]
    },
    {
      "matchPackageNames": ["immich-server"],
	  "dependencyDashboardApproval": true
    }
  ],

  "branchConcurrentLimit": 1,
  "schedule": ["* * * * 1-4"]
  
}
